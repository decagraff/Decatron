        <aside class="sidebar" role="navigation" aria-label="Men√∫ de navegaci√≥n">
            <div class="sidebar-header">
                <a href="/dashboard" class="sidebar-brand">
                    <span class="brand-icon">‚ö°</span>
                    <span class="brand-text">Decatron</span>
                </a>
            </div>

            <nav class="sidebar-nav">
                <a href="/dashboard" class="nav-item" title="Dashboard">
                    <span class="nav-icon">üìä</span>
                    <span class="nav-label">Dashboard</span>
                </a>

                <a href="/settings" class="nav-item" title="Configuraci√≥n">
                    <span class="nav-icon">‚öôÔ∏è</span>
                    <span class="nav-label">Configuraci√≥n</span>
                </a>

                <a href="/commands/default" class="nav-item" title="Comandos por Defecto">
                    <span class="nav-icon">‚ö°</span>
                    <span class="nav-label">Comandos</span>
                </a>
                <a href="/commands/microcommands" class="nav-item" title="Micro Comandos">
                    <span class="nav-icon">üéÆ</span>
                    <span class="nav-label">Micro Comandos</span>
                </a>

                <hr class="nav-divider" />

                <a href="/api/auth/logout" class="nav-item nav-logout" title="Cerrar sesi√≥n">
                    <span class="nav-icon">üö™</span>
                    <span class="nav-label">Cerrar Sesi√≥n</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <div class="main-wrapper">
            <!-- Top Navbar -->
            <nav class="navbar navbar-dashboard" role="navigation" aria-label="Barra de navegaci√≥n superior">
                <div class="navbar-left">
                    <button id="sidebar-toggle" class="sidebar-toggle" title="Toggle sidebar" aria-label="Toggle sidebar">
                        <span class="toggle-icon">‚ò∞</span>
                    </button>
                    <button id="theme-toggle" class="theme-toggle" title="Cambiar tema" aria-label="Toggle theme">üåô</button>
                </div>

                <div class="navbar-right">
                    <!-- Channel Switcher (se crea din√°micamente via JavaScript) -->
                    
                    <!-- User Menu Dropdown -->
                    <div class="user-menu">
                        <button class="user-button" id="user-dropdown-btn" aria-haspopup="true" aria-expanded="false">
                            <img src="@(User?.FindFirst("ProfileImage")?.Value ?? "~/images/default-avatar.png")" 
                                 alt="Avatar" 
                                 class="user-avatar" />
                            <span class="user-name">@User?.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value</span>
                            <span class="dropdown-icon">‚ñº</span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div class="dropdown-menu" id="user-dropdown-menu" role="menu">
                            <a href="/settings" class="dropdown-item" role="menuitem">
                                <span class="dropdown-icon">‚öôÔ∏è</span>
                                <span class="dropdown-text">Configuraci√≥n</span>
                            </a>
                            <hr class="dropdown-divider" />
                            <a href="/api/auth/logout" class="dropdown-item dropdown-logout" role="menuitem">
                                <span class="dropdown-icon">üö™</span>
                                <span class="dropdown-text">Cerrar Sesi√≥n</span>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="main-content" role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Toast Notification Container -->
    <div id="toast-container" class="toast-container"></div>

    <!-- Scripts -->
    <script src="~/js/base.js"></script>
    <script src="~/js/toast-notifications.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/navigation-permissions.js"></script>
    <script src="~/js/ChannelSwitcher.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
